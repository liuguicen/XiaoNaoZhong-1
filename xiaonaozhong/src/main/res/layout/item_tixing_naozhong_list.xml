<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:gravity="left">

        <TextView
            android:id="@+id/tv_tixing_naozhong_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="间隔时间"
            android:textColor="@color/set_tixing_account_line"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/tv_tixing_naozhong_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_tixing_naozhong_dis"
            android:layout_gravity="bottom"
            android:gravity="left|bottom"
            android:text="时间"
            android:paddingLeft="16dp"
            android:textSize="@dimen/text_size_little_middle" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_del_tixing_naozhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:textSize="@dimen/set_small_text_size"/>

</RelativeLayout>